    <application
        android:name="com.carlos.grabredenvelope.util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/xiaobudian"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.carlos.grabredenvelope.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.carlos.grabredenvelope.services.WechatService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:label="@string/grab_wechat_envelope"
            >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessible_service_config"/>
        </service>



